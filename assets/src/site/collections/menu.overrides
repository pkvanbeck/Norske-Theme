/*******************************
         Site Overrides
*******************************/


.ui.inverted.menu {
    margin: 0px;
    border-radius: 0px;
}

.ui.inverted.menu .item:before {
    font-color: @black;
}

#nav > a {
    line-height: 70px;
    padding-left: 40px;
    padding-right: 40px;
    border: 0px;
    color: @blue;
}

#nav a:link {
    color: @white;
}

#nav a:hover {
    color: @red;
}

.ui.menu {
    background: initial;
    box-shadow: 0px;
}
